<?php

function simple_contact_form_alter(&$form, &$form_state, $form_id) {
    if ($form_id == 'contact_site_form') {
        $form['subject']['#disabled'] = 1;
        $form['subject']['#required'] = 0;
        $form['subject']['#access'] = FALSE;

        $form['copy']['#access'] = FALSE;
    }
}
